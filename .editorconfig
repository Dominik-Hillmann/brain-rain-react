# top-most EditorConfig file
root = true

# Matches multiple files with brace expansion notation
# Set default charset
[*]
charset = utf-8

# 4 space indentation
[{*.js,*.jsx,*.ts,*.tsx,*.json,*.css}]
indent_style = space
indent_size = 2

# Matches the exact files either package.json or .travis.yml
[{*.yml,*.yaml}]
indent_style = space
indent_size = 2

